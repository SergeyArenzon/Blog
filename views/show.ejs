<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blogFound.title %></div>

    <div class="ui top attached ">
        <div class="item">
            <img class="ui centered rounded image" src=<%= blogFound.image %> >
            <div class="content">
                <span> <%= blogFound.created.toDateString() %> </span>
            </div>
            <div class="description">

                <p><%= blogFound.body %></p>

            </div>
            <form action="/blogs/<%= blogFound._id %>?_method=DELETE" method="POST">
                <button class="ui red basic button"> Delete</button>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer") %>